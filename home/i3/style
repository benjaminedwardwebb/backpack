# i3/style
# i3 configuration file that manages style settings.
#
# vim: filetype=i3config

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Fira Code, monospace 12

default_border pixel

hide_edge_borders both

# colorclass border	background text	indicator child_border
client.focused $emphasizedBackground $emphasizedBackground $accentColor $emphasizedBackground $emphasizedBackground
client.unfocused $emphasizedBackground $emphasizedBackground $accentColor $emphasizedBackground $emphasizedBackground
client.focused_inactive	$emphasizedBackground $background $deemphasizedBackground $background $background
#client.urgent				$base02 	$base03 	$base01 	$base03 	$base03
#client.placeholder			$base02 	$base03 	$base01 	$base03 	$base03
